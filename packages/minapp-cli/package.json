{
	"name": "@minapp/cli",
	"description": "minapp 命令行工具，用于创建项目、开发项目、编译项目",
	"version": "2.2.0",
	"bin": {
		"minapp": "dist/bin/minapp.js"
	},
	"engines": {
		"node": ">= 6.0.0"
	},
	"scripts": {
		"test": "echo 0",
		"lint": "tslint src/**/*.ts",
		"postpublish": "sync-taobao",
		"clear": "remove-all dist",
		"prepublish": "node dist/make.js",
		"build": "npm run clear && tsc && npm run prepublish",
		"watch": "tsc -w"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"author": "Mora <qiuzhongleiabc@126.com> (https://github.com/qiu8310)",
	"bugs": "https://github.com/qiu8310/minapp/issues",
	"homepage": "https://github.com/qiu8310/minapp/tree/master/packages/minapp-cli",
	"repository": {
		"type": "git",
		"url": "https://github.com/qiu8310/minapp/tree/master/packages/minapp-cli"
	},
	"dependencies": {
		"@minapp/common": "^2.1.0",
		"@minapp/wxml-parser": "^2.1.4",
		"autoprefixer": "^8.6.5",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.5",
		"babel-plugin-transform-decorators-legacy": "^1.3.5",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-stage-0": "^6.24.1",
		"babel-preset-stage-1": "^6.24.1",
		"clean-css": "^4.2.1",
		"debug": "^3.2.6",
		"fs-extra": "^5.0.0",
		"image-size": "^0.6.3",
		"import-local": "^1.0.0",
		"inquirer": "^5.2.0",
		"json5": "^1.0.1",
		"mime": "^2.4.0",
		"mora-common": "1.0.22",
		"mora-scripts": "1.6.35",
		"portscanner": "^2.2.0",
		"pug": "^2.0.3",
		"tslib": "^1.9.3",
		"uglifyjs-webpack-plugin": "^1.3.0",
		"update-notifier": "^2.5.0",
		"validate-npm-package-name": "^3.0.0",
		"webpack": "^4.28.1",
		"webpack-dev-server": "^3.1.14",
		"webpack-sources": "^1.3.0"
	},
	"devDependencies": {
		"@types/autoprefixer": "^6.7.3",
		"@types/fs-extra": "^5.0.4",
		"@types/inquirer": "0.0.41",
		"@types/json5": "^0.0.29",
		"@types/portscanner": "^2.1.0",
		"@types/pug": "^2.0.4",
		"@types/webpack": "^4.4.22",
		"@types/webpack-dev-server": "^2.9.6",
		"@types/webpack-sources": "^0.1.5",
		"@types/jest": "^22.1.1",
		"jest": "^22.1.4",
		"ts-jest": "^22.0.2",
		"ts-lint": "^4.5.1",
		"typescript": "^2.9.2"
	},
	"jest": {
		"roots": [
			"src"
		],
		"collectCoverage": true,
		"coverageReporters": [
			"text",
			"html"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/__tests__/helper/"
		],
		"coverageDirectory": "./coverage",
		"transform": {
			"^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		]
	}
}
